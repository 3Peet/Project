<script type="text/javascript">

function gen_graph(graph_name,data,html_id,color){
  var graph_options = {
        chart: {
          height: 350,
          type: "line",
          fontFamily: "Nunito, sans-serif",
          animations: {
            easing: "linear",
            dynamicAnimation: {
              speed: 2000,
            },
          },
          toolbar: {
            show: false,
          },
          zoom: {
            enabled: false,
          },
        },
        colors: [color],
        dataLabels: {
          enabled: false,
        },
        stroke: {
          curve: "smooth",
        },
        series: [
          {
            name: graph_name,
            data: data,
          }
        ],
        title: {
          text: graph_name,
          align: "left",
        },
        markers: {
          size: 0,
        },
        xaxis: {
          range: 10,
          tickAmount: 10,
        },
        legend: {
          show: true,
        },
      };

var graph_chart = new ApexCharts(
document.querySelector(html_id),
graph_options);
graph_chart.render();

}

gen_graph("Temperature",[30, 32, 29, 31, 33, 34, 34, 33, 32, 30, 29, 29, 28, 29, 30],"#temp_graph","#ef476f");
gen_graph("Humidity",[60, 66, 55, 59, 62, 60, 52, 70, 69, 65, 54, 58, 60, 63, 66],"#hum_graph","#ffd166");
